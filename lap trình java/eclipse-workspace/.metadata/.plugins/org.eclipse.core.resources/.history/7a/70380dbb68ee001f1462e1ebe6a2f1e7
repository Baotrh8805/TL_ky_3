package user;

public class Main {
    public static void main(String[] args) {
        Customer customer1 = new Customer("Nguyễn Văn A", "0987654321", "a@gmail.com", "Hà Nội", 25);
        Customer customer2 = new Customer("Hoàng Minh", "0978654321", "b@gmail.com", "TP HCM", 30);
        
        Staff staff1 = new Staff("Trần Thị B", "0971122334", "b@gmail.com", "PT");
        Staff staff2 = new Staff("Lê Quốc C", "0969988776", "c@gmail.com", "Receptionist");

        Admin admin1 = new Admin("Đặng Văn D", "0955544332", "d@gmail.com", 5);

        System.out.println("---- Thông tin khách hàng ----");
        customer1.showInfo();
        customer2.showInfo();

        System.out.println("\n---- Thông tin nhân viên ----");
        staff1.showInfo();
        staff2.showInfo();

        System.out.println("\n---- Thông tin quản trị viên ----");
        admin1.showInfo();
    }
}
