package user;

public class Main {
    public static void main(String[] args) {
        Customer customer = new Customer("Nguyễn Văn A", "0987654321", "a@gmail.com", "VIP");
        Staff staff = new Staff("Trần Thị B", "0971122334", "b@gmail.com", "PT");
        Admin admin = new Admin("Lê Văn C", "0969988776", "c@gmail.com", 5);

        System.out.println("---- Thông tin khách hàng ----");
        customer.showInfo();

        System.out.println("\n---- Thông tin nhân viên ----");
        staff.showInfo();

        System.out.println("\n---- Thông tin quản trị viên ----");
        admin.showInfo();
    }
}
